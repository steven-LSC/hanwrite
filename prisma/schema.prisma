generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String            @id @default(uuid())
  username          String            @unique
  password          String
  responseLanguage  String            @default("繁體中文")
  openaiModel       String            @default("gpt-4.1-mini")
  condition         String            @default("full")
  mindmaps          Mindmap[]
  writings          Writing[]
  behaviors         UserBehavior[]
  writingProgresses WritingProgress[]

  @@map("User")
}

model Mindmap {
  id        String   @id @default(cuid())
  title     String
  nodes     Json
  outline   Json?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Mindmap")
}

model Writing {
  id                String            @id @default(cuid())
  title             String
  content           String
  characterCount    Int
  userId            String
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  writingProgresses WritingProgress[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@map("Writing")
}

model UserBehavior {
  id         String   @id @default(uuid())
  userId     String
  actionName String
  resultData Json?
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("UserBehavior")
}

model WritingProgress {
  id             String   @id @default(uuid())
  writingId      String
  userId         String
  timestamp      DateTime @default(now())
  characterCount Int
  type           String // "start", "idle", "interval" - start: 開始時, idle: 3秒沒動靜, interval: 30秒間隔
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  writing        Writing  @relation(fields: [writingId], references: [id], onDelete: Cascade)

  @@map("WritingProgress")
}
