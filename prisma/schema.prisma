generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  mindmaps Mindmap[]
  writings Writing[]

  @@map("User")
}

model Mindmap {
  id        String   @id @default(cuid())
  title     String
  nodes     Json
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Mindmap")
}

model Writing {
  id             String   @id @default(cuid())
  title          String
  content        String
  characterCount Int
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("Writing")
}
