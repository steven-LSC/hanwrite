generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String         @id @default(uuid())
  username         String         @unique
  password         String
  responseLanguage String         @default("繁體中文")
  openaiModel      String         @default("gpt-4.1-mini")
  mindmaps         Mindmap[]
  writings         Writing[]
  behaviors        UserBehavior[]

  @@map("User")
}

model Mindmap {
  id        String   @id @default(cuid())
  title     String
  nodes     Json
  outline   Json?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Mindmap")
}

model Writing {
  id             String   @id @default(cuid())
  title          String
  content        String
  characterCount Int
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("Writing")
}

model UserBehavior {
  id         String   @id @default(uuid())
  userId     String
  actionName String
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("UserBehavior")
}
